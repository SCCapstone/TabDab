<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tabdab">

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BillShow"/>
        <activity android:name=".CreateVendor" />
        <activity android:name=".EditMenu" />
        <activity
            android:name=".BillCreator"
            android:label="Bill Creator"
            android:parentActivityName=".AccountInformation" />
        <activity android:name=".CreateAccount" />
        <activity android:name=".EditInfo" />
        <activity android:name=".AccountInformation" />
        <activity android:name=".ChangePassword" />
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BillView"
            android:label="@string/bill_view"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.tabdab.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Main Activity"
            android:parentActivityName=".AccountInformation" />
    </application>

</manifest>