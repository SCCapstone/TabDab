<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VendorMenuFragment">

    <TextView
        android:id="@+id/vendorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:text="@string/vendor_menu"
        android:textSize="40sp"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/vendorId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/butMakeBill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:background="@drawable/button_pink_white_outline"
        android:text="@string/create_bill"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/butEditMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_pink_white_outline"
        android:text="@string/edit_menu"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false" />

</LinearLayout>