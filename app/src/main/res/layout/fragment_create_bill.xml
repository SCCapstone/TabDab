<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateBillFragment">

    <ScrollView
        android:id="@+id/itemized_bill_scroller"
        android:layout_width="325dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/itemized_bill_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/itemized_bill"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="325dp"
        android:layout_height="400dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/generate_bill_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/generate_bill_btn"
        android:textAllCaps="false"
        android:background="@drawable/button_pink_white_outline"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/clear_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/clear"
        android:textAllCaps="false"
        android:background="@drawable/button_pink_white_outline"
        android:textColor="@color/white"/>
</LinearLayout>